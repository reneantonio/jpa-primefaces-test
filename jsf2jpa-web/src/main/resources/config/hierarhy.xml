<Table name="cars" row="row">
    <column name="id"
          filter="row.wrappedObject.id"
          sort="row.wrappedObject.id"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.wrappedObject.id}"/>

    <column name="name"
          filter="row.wrappedObject.name"
          sort="row.wrappedObject.name"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.wrappedObject.name}"/>

     <column name="description"
          filter="row.wrappedObject.description"
          sort="row.wrappedObject.description"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.wrappedObject.description}"/>
          
     <column name="Attr_1"
          filter="row.attributes['Attr_1']"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.attributes['Attr_1'].asString}"/>
          
      <column name="Attr_2"
          filter="row.attributes['Attr_2']"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.attributes['Attr_2'].asString}"/>
          
      <column name="Attr_3"
          filter="row.attributes['Attr_3']"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.attributes['Attr_3'].asString}"/>
</Table>
