<Table name="cars" row="row">
    <column name="id"
          filter="row.wrappedObject.id"
          sort="row.wrappedObject.id"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.wrappedObject.id}"/>

    <column name="name"
          filter="row.wrappedObject.name"
          sort="row.wrappedObject.name"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.wrappedObject.name}"/>

     <column name="description"
          filter="row.wrappedObject.description"
          sort="row.wrappedObject.description"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.wrappedObject.description}"/>
          
     <column name="Price"
          filter="row.attributes['Price']"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.attributes['Price']}"/>
          
      <column name="Weight"
          filter="row.attributes['Weight']"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.attributes['Weight']}"/>
          
      <column name="Length"
          filter="row.attributes['Length']"
          filterMatchMode="contains"
          filterStyle="width: 100%"
          textStyle="font-size: 10px"
          style="width: 10%"
          value="#{row.attributes['Length']}"/>
</Table>

